# Database
MONGODB_URI=mongodb://localhost:27017/student-innovation-trust

# JWT Secret
JWT_SECRET=your-super-secret-jwt-key-here

# Server
PORT=5000
NODE_ENV=development

# Google Cloud Storage (optional)
GOOGLE_CLOUD_PROJECT_ID=your-project-id
GOOGLE_CLOUD_KEY_FILE=path/to/service-account-key.json
GOOGLE_CLOUD_STORAGE_BUCKET=your-bucket-name

# Logging
LOG_LEVEL=info

# Polygon zkEVM Configuration
POLYGON_ZKEVM_RPC_URL=https://zkevm-rpc.com
POLYGON_ZKEVM_TESTNET_RPC_URL=https://rpc.public.zkevm-test.net
PRIVATE_KEY=your-wallet-private-key-for-deployment

# Contract Addresses (will be populated after deployment)
CSHARE_CONTRACT_ADDRESS=your-cshare-token-contract-address
ESCROW_CONTRACT_ADDRESS=your-project-escrow-contract-address

# Frontend Environment Variables
VITE_CSHARE_CONTRACT_ADDRESS=your-cshare-token-contract-address
VITE_ESCROW_CONTRACT_ADDRESS=your-project-escrow-contract-address
VITE_NETWORK_CHAIN_ID=1101
VITE_POLYGON_ZKEVM_RPC_URL=https://zkevm-rpc.com

# Polygon Explorer API Key (for contract verification)
POLYGONSCAN_API_KEY=your-polygonscan-api-key

# Legacy Support (for backward compatibility)
POLYGON_RPC_URL=https://polygon-mumbai.g.alchemy.com/v2/your-api-key
CONTRACT_ADDRESS=your-deployed-contract-address
